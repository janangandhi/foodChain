<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".33"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Today's Menu:"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="#3b405c" />

    <TextView
        android:id="@+id/dishSelected"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".33"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Selected Dish"
        android:gravity="center"
        android:textSize="34sp"
        android:textColor="#4758b8" />

    <View android:layout_width="0dp"
        android:layout_height="80dp" />

    <Button
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me!!"
        android:onClick="findDish"
        android:id="@+id/button"
        android:background="#8e919e"/>

    <View android:layout_width="0dp" android:layout_height="1dp"
        android:layout_weight=".10"></View>
</LinearLayout>
